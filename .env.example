# Penshort Environment Configuration
# Copy this file to .env and adjust values as needed.

# Application
APP_ENV=development
APP_PORT=8080

# Database (PostgreSQL)
# For local development with Docker Compose:
DATABASE_URL=postgres://penshort:penshort@localhost:5432/penshort?sslmode=disable

# Cache (Redis)
# For local development with Docker Compose:
REDIS_URL=redis://localhost:6379

# Base URL for short links
# In production, set to your domain (e.g., https://pen.sh)
BASE_URL=http://localhost:8080

# Logging
LOG_LEVEL=debug
LOG_FORMAT=text

# Rate Limiting
RATE_LIMIT_API_ENABLED=true
RATE_LIMIT_REDIRECT_ENABLED=true
RATE_LIMIT_REDIRECT_RPS=100
RATE_LIMIT_REDIRECT_BURST=20

# CORS Configuration
# Comma-separated list of allowed origins (leave empty to disable CORS)
# In production, set to your frontend domain(s):
# CORS_ALLOWED_ORIGINS=https://app.example.com,https://admin.example.com
CORS_ALLOWED_ORIGINS=

# Request Body Size Limit (bytes)
# Default: 1048576 (1MB)
MAX_REQUEST_BODY_SIZE=1048576

# Webhooks
# Allow HTTP/localhost targets for local testing only
WEBHOOK_ALLOW_INSECURE=false
